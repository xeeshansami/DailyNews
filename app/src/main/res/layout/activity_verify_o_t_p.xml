<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activities.VerifyOTPActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin_10"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/closeVerifyOTPDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/doneVerifyOTPDialog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/done" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30"
                android:src="@drawable/otp_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_30"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/margin_10">

                <TextView
                    style="@style/RegularCondensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/verification_code"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_20" />

                <TextView
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:text="@string/otp_message"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_15" />

                <TextView
                    android:id="@+id/txtOTPMobileNumber"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_10"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_18" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_50"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_10">

                    <EditText
                        android:id="@+id/etOTP1"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_25" />

                    <EditText
                        android:id="@+id/etOTP2"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textSize="@dimen/text_25" />

                    <EditText
                        android:id="@+id/etOTP3"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textSize="@dimen/text_25" />

                    <EditText
                        android:id="@+id/etOTP4"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textSize="@dimen/text_25" />

                    <EditText
                        android:id="@+id/etOTP5"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_marginEnd="@dimen/margin_10"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textSize="@dimen/text_25" />

                    <EditText
                        android:id="@+id/etOTP6"
                        style="@style/Bold"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/margin_50"
                        android:layout_weight="1"
                        android:background="@drawable/otp_edittext_bg"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="1"
                        android:textSize="@dimen/text_25" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtSecondsRemaining"
                    style="@style/Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_40"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16" />

                <TextView
                    android:id="@+id/txtResendOTP"
                    style="@style/RegularCondensed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_40"
                    android:gravity="center"
                    android:text="@string/resend_otp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_18"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_50"
                android:orientation="horizontal"
                android:paddingStart="@dimen/margin_10"
                android:paddingEnd="@dimen/margin_10">

                <TextView
                    android:id="@+id/txtCancel"
                    style="@style/RegularCondensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:text="@string/cancel"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:id="@+id/txtVerify"
                    style="@style/RegularCondensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/margin_20"
                    android:layout_weight="1"
                    android:background="@color/appColor"
                    android:gravity="center"
                    android:paddingTop="@dimen/margin_10"
                    android:paddingBottom="@dimen/margin_10"
                    android:text="@string/verify"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>